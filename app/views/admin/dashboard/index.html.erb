<h1>Admin Dashboard</h1>

<h3><%= link_to "Admin Merchants Index", "/admin/merchants", method: :get %></h3>
<h3><%= link_to "Admin Invoices Index", "/admin/invoices", method: :get %></h3>


<div id="incomplete">
    <h3>Incomplete Invoices</h3>
    <ul>
        <% @invoices.oldest_first.each do |invoice| %>
            <% if invoice.has_items_not_shipped == false %>
            <li><%= link_to "#{invoice.id}", "admin/invoices/#{invoice.id}"  %> 
            - Date: <%= invoice.created_at.strftime('%A, %B %d, %Y') %></li>
            <% end %>
        <% end %>
    </ul>
</div>