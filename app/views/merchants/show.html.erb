<h1><%= @merchant.name %>
</h1>
<br>
<h3>
  <a href="/merchants/<%= @merchant.id %>/items">
    <%= @merchant.name %>'s Items
  </a>
</h3><br/>
<h3>
  <a href="/merchants/<%= @merchant.id %>/invoices">
    Invoices
  </a>
</h3>

<h2>Top 5 Customers:
</h2>
<ol>
  <% @merchant.top_5_customers.each do |cust| %>
    <li id="<%= cust.id %>">
      Name: <%= cust.first_name %> <%= cust.last_name %><br>
      Successful Transactions:
      <%= cust.successful_transactions %></li>
    <br>
  <% end %>
</ol>

<h2 class="items_ready_to_ship">Items ready to ship</h2>
