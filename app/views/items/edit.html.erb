<h1>Edit <%= @item.name%></h1>
<%= form_with url: "/items/#{@item.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price %>

  <%= f.submit %>
<% end %>