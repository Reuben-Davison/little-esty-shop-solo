<h1> Create a new item for <%= @merchant.name %></h1>
<%= form_with url: "/items", method: :post do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_area :name %>
  <%= f.label :description, "Description:" %>
  <%= f.text_area :description %>
  <%= f.label :unit_price, "Price: $" %>
  <%= f.number_field :unit_price %>
  <%# <%= f.hidden_field :status, value: "disabled" %>
  <%= f.hidden_field :merchant_id, value: "#{@merchant.id}" %>
  <%= f.submit "Create Item" %>
<% end %>
