<h1>Create a new discount</h1>

<%= form_with url: merchant_discounts_path, method: :post, local: true do |f| %>
    <%= f.label :threshold, "Threshold" %>
    <%= f.text_field :threshold %>

    <%= f.label :percentage, "Percentage" %>
    <%= f.text_field :percentage %>

    <%= f.submit "Create" %>
    <% end  %>