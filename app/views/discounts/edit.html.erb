<h1>Edit Discount</h1>
<%= form_with url: "/merchants/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, local: true do |f| %>
    <%= f.label :threshold, "Threshold" %>
    <%= f.text_field :threshold, value: @discount.threshold %>

    <%= f.label :percentage, "Percentage" %>
    <%= f.text_field :percentage, value: @discount.percentage %>

    <%= f.submit "Update" %>
    <% end  %>